{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@api/*": ["api/*"],
      "@feature/*": ["feature/*"],
      "@organisms/*": ["components/03_organisms/*"],
      "@templates/*": ["components/04_templates/*"]
    },
  },
  "include": ["./src"]
}
